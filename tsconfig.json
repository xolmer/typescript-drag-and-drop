{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "dom", "dom.iterable", "scripthost"],
    "module": "amd",

    "rootDir": "./src",
    "outDir": "./dist",
    "outFile": "./dist/bundle.js",

    "esModuleInterop": true,

    "strict": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true
  }
}
